.container
  - p url
  = simple_form_for [:admin, @product], url: url, html: { class: "form-horizontal" } do |f|
    %legend= legend
    = f.input :name
    = f.input :manufacturer
    = f.input :link
    = f.input :rating

    = f.input :document, as: :file, label: t(".product_document")
    = f.input :document_cache, as: :hidden

    - if f.object.document.present?
      %p= link_to t('.show_document'), admin_file_path(f.object.document), target: :_blank


    .form-actions
      %br
      = f.submit class: "btn btn-primary", value: btn_title
      = link_to "Отмена", [:admin, :categories], class: "btn"
