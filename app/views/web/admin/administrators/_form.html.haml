.container
  = simple_form_for [:admin, @administrator], html: { class: "form-horizontal" } do |f|
    %legend= legend
    = f.input :surname
    = f.input :name
    = f.input :patronymic
    = f.input :role, as: :select, collection: allowed_administrator_roles_list_for(current_administrator)
    = f.input :email

    = f.input :new_users_notification, as: :boolean
    = f.input :new_pilots_notification, as: :boolean
    = f.input :new_testing_methods_notification, as: :boolean
    = f.input :new_event_claim_notification, as: :boolean

    = f.input :password, required: true
    = f.input :password_confirmation, required: true
    .form-actions
      = f.submit class: "btn btn-primary", value: btn_title
      = link_to "Отмена", [:admin, :administrators], class: "btn"
