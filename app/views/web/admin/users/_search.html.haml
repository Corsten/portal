= search_form_for @q, url: admin_users_path, method: :get, html: { class: 'form-horizontal' } do |q|
  .row
    .col-sm-2
      = q.text_field :full_name_cont, class: "form-control", placeholder: han(:user, :full_name)
    .col-sm-2
      = q.text_field :email_cont, class: "form-control", placeholder: han(:user, :email)
    .col-sm-2
      = q.submit class: "btn btn-primary"
      = link_to "Сброс", admin_users_path, class: "btn btn-info"
  %br
